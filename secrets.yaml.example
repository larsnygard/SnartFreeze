# SnartFreeze Secrets Template
# 
# Copy this file to 'secrets.yaml' and fill in your own values.
# NEVER commit the actual secrets.yaml file to version control!
#
# Example:
#   cp secrets.yaml.example secrets.yaml
#   nano secrets.yaml  # Edit with your actual values

# WiFi credentials
wifi_ssid: "Your_WiFi_SSID"
wifi_password: "Your_WiFi_Password"

# Access Point fallback password (used when WiFi connection fails)
ap_password: "SnartFreeze123"

# Home Assistant API encryption key
# Generate a random 32-byte base64 key, e.g.:
#   openssl rand -base64 32
api_encryption_key: "YOUR_API_ENCRYPTION_KEY_HERE"

# OTA update password
ota_password: "YOUR_OTA_PASSWORD_HERE"
